{
  "name": "@researchgate/tooling",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "create-github-release": "conventional-github-releaser -p angular",
    "lint": "spire lint",
    "release": "spire release"
  },
  "devDependencies": {
    "@researchgate/prettier-config": "^1.0.0",
    "conventional-github-releaser": "^3.1.3",
    "spire": "^1.7.0"
  },
  "spire": {
    "extends": "@researchgate/spire-config",
    "plugins": [
      [
        "spire-plugin-lerna-release",
        {
          "githubRelease": false
        }
      ]
    ]
  }
}
