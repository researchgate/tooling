{
  "name": "@researchgate/renovate-config",
  "version": "1.5.0",
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        "default:preserveSemverRanges",
        "default:rebaseStalePrs",
        "schedule:nonOfficeHours",
        "default:maintainLockFilesMonthly"
      ],
      "postUpdateOptions": [
        "yarnDedupeHighest"
      ],
      "semanticCommits": true,
      "packageRules": [
        {
          "depTypeList": [
            "devDependencies"
          ],
          "automerge": true
        }
      ]
    }
  }
}
