{
  "name": "@researchgate/renovate-config",
  "version": "1.6.4",
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        "default:rebaseStalePrs"
      ],
      "lockFileMaintenance": {
        "enabled": true,
        "extends": "schedule:monthly",
        "semanticCommitType": "chore",
        "automerge": true
      },
      "postUpdateOptions": [
        "yarnDedupeHighest"
      ],
      "semanticCommits": true,
      "semanticCommitType": "fix",
      "rangeStrategy": "replace",
      "php": {
        "enabled": false
      },
      "packageRules": [
        {
          "depTypeList": [
            "devDependencies"
          ],
          "semanticCommitType": "chore",
          "automerge": true,
          "rangeStrategy": "pin"
        },
        {
          "depTypeList": [
            "peerDependencies"
          ],
          "rangeStrategy": "widen"
        }
      ]
    }
  }
}
